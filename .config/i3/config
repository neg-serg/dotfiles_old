mode "focused" {
    bindsym b [class="(?i)firefox"] focus, mode "default"
    bindsym w [class="(?i)terminal" title="weechat"] focus
    bindsym z [class="(?i)zathura"] focus

    # keybindings for marking and jumping to clients
    bindsym a exec i3-input -f $myfont -F 'mark %s' -P 'Mark name: '
    bindsym g exec i3-input -f $myfont -F '[con_mark=%s] focus' -P 'Go to mark: '

    # Exit to the default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym j resize shrink left 2 px or 2 ppt
    bindsym Shift+J resize grow left 2 px or 2 ppt

    bindsym k resize shrink down 2 px or 2 ppt
    bindsym Shift+K resize grow down 2 px or 2 ppt

    bindsym l resize shrink up 2 px or 2 ppt
    bindsym Shift+L resize grow up 2 px or 2 ppt

    bindsym semicolon resize shrink right 2 px or 2 ppt
    bindsym Shift+colon resize grow right 2 px or 2 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+C mode "default"
    bindsym Control+G mode "default"
}

mode "move" {
	bindsym $alt+h move left 1 px
	bindsym $alt+j move down 1 px
	bindsym $alt+k move up 1 px
	bindsym $alt+l move right 1 px

	bindsym h move left 4 px
	bindsym j move down 4 px
	bindsym k move up 4 px
	bindsym l move right 4 px

	bindsym Shift+h move left 16 px
	bindsym Shift+j move down 16 px
	bindsym Shift+k move up 16 px
	bindsym Shift+l move right 16 px

	bindsym Control+h move left 32 px
	bindsym Control+j move down 32 px
	bindsym Control+k move up 32 px
	bindsym Control+l move right 32 px

	bindsym Control+Shift+h move left 64 px
	bindsym Control+Shift+j move down 64 px
	bindsym Control+Shift+k move up 64 px
	bindsym Control+Shift+l move right 64 px

	bindsym $mod+space $return
	bindsym Escape $exit
}


mode "[Layout]" {
	bindsym grave layout default; $exit
	bindsym t layout tabbed; $exit
	bindsym s layout stacking; $exit
	bindsym h layout splith; $exit
	bindsym v layout splitv; $exit

    bindsym h split h; $exit
    bindsym v split v; $exit

	bindsym j split vertical; $exit
	bindsym k split vertical; $exit
	bindsym h split horizontal; $exit
	bindsym l split horizontal; $exit

    bindsym Control+W move up
    bindsym Control+S move down
    bindsym Control+A move left
    bindsym Control+D move right

	# toggle [stacking, tabbed, splith, splitv]
	bindsym a layout toggle all; $exit
	# toggle [splith, splitv]
	bindsym s layout toggle split; $exit
	# toggle [stacking, tabbed, split]
	bindsym t layout toggle; $exit

	bindsym Escape $exit
}

mode "gaps" {
	bindsym o mode "gaps-outer"
	bindsym i mode "gaps-inner"
	bindsym $mod+space $return
	bindsym Escape $exit
}

mode "gaps-outer" {
	bindsym plus  gaps outer current plus 5
	bindsym minus gaps outer current minus 5
	bindsym 0     gaps outer current set 0

	bindsym Shift+plus  gaps outer all plus 5
	bindsym Shift+minus gaps outer all minus 5
	bindsym Shift+0     gaps outer all set 0

	bindsym $mod+space $return
	bindsym Escape $exit
}

mode "gaps-inner" {
	bindsym plus  gaps inner current plus 5
	bindsym minus gaps inner current minus 5
	bindsym 0     gaps inner current set 0

	bindsym Shift+plus  gaps inner all plus 5
	bindsym Shift+minus gaps inner all minus 5
	bindsym Shift+0     gaps inner all set 0

	bindsym $mod+space $return
	bindsym Escape $exit
}

