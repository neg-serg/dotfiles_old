        active_workspace   #ffffff #000000
        inactive_workspace #888888 #000000
        urgent_workspace   #ffffff #900000
    }
}

mode "focused" {
    bindsym b [class="(?i)firefox"] focus, mode "default"
    bindsym w [class="(?i)terminal" title="weechat"] focus
    bindsym z [class="(?i)zathura"] focus

    # keybindings for marking and jumping to clients
    bindsym a exec i3-input -F 'mark %s' -P 'Mark name: '
    bindsym g exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '

    # Assign marks to keys 1-5
    bindsym Shift+1 mark mark1
    bindsym Shift+2 mark mark2

    # Exit to the default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+n mode "focused"

mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym j resize shrink left 2 px or 2 ppt
    bindsym Shift+J resize grow   left 2 px or 2 ppt

    bindsym k resize shrink down 2 px or 2 ppt
    bindsym Shift+K resize grow   down 2 px or 2 ppt

    bindsym l resize shrink up 2 px or 2 ppt
    bindsym Shift+L resize grow   up 2 px or 2 ppt

    bindsym semicolon resize shrink right 2 px or 2 ppt
    bindsym Shift+colon resize grow   right 2 px or 2 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink left 2 px or 2 ppt
    bindsym Shift+Left resize grow   left 2 px or 2 ppt

    bindsym Down resize shrink down 2 px or 2 ppt
    bindsym Shift+Down resize grow   down 2 px or 2 ppt

    bindsym Up resize shrink up 2 px or 2 ppt
    bindsym Shift+Up resize grow   up 2 px or 2 ppt

    bindsym Right resize shrink right 2 px or 2 ppt
    bindsym Shift+Right resize grow   right 2 px or 2 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+C mode "default"
    bindsym Control+G mode "default"
}

bindsym $mod+Pause mode "$mode_system"


