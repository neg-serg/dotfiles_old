bar {
    status_command    i3status
    position          bottom
    #mode              hide
    workspace_buttons yes
    tray_output       primary
    #binding_mode_indicator no
    #i3bar_command i3bar -t
    binding_mode_indicator yes
    
    colors {
        background #000000
        statusline #ffffff

