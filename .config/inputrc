set editing-mode emacs
set keymap emacs-meta

set bell-style                 none
set bind-tty-special-chars     off
set completion-ignore-case     on
set completion-map-case        on
set completion-query-items     200
set convert-meta               on
set echo-control-characters    on
set enable-keypad              off
set enable-meta-key            on
set history-preserve-point     off
set history-size               1000
set horizontal-scroll-mode     off
set input-meta                 on
set mark-directories           on
set mark-modified-lines        off
set mark-symlinked-directories on
set match-hidden-files         off
set match-hidden-files         off
set meta-flag                  on
set output-meta                on
set page-completions           on
set show-all-if-ambiguous      on
set show-all-if-unmodified     on
set skip-completed-text        on
set visible-stats              on

$if pimpd2
  "\C-h": "help\n"
  "\C-l": "loved?\n"
  "\C-n": "np\n"
  "\C-o": "stop\n"
  "\C-k": "stop\n"
  "\C-y": "copy\n"
  "\C-ya": "copya\n"
$endif

$if re.pl
  "\C-e": "perldoc perlre\n"
  "\C-g": "perldoc perlguts\n"
  "\C-p": "perldoc perlipc\n"
  "\C-o": "perldoc perlop\n"
  "\C-u": "perldoc perlunicode\n"
  "\C-v": "perldoc perlvar\n"
$endif

$if Bash
  "\C-x0": " &>/dev/null "
  "\C-x1": " >/dev/null "
  "\C-x2": " 2>/dev/null "
  "\C-x3": " 2>&1 "
$endif

$if mode=vi
  set keymap vi-insert
  "gg": beginning-of-history
  "G": end-of-history
  "j": history-search-forward
  "k": history-search-backward
  set keymap vi-insert
  "kj": vi-movement-mode
  "\C-w": backward-kill-word
  "\C-l": clear-screen
  # auto-complete from the history
  "\C-p": history-search-backward
  "\C-n": history-search-forward
$endif

"\C-w": backward-kill-word
"\ew": copy-backward-word
"\C-p": history-search-backward
"\C-n": history-search-forward
"\C-\M-p": dynamic-complete-history
"\C-x\C-i": menu-complete
"\C-x\C-o": menu-complete-backward
"\ea": alias-expand-line
"\C-x\C-r": re-read-init-file
"\C-u": kill-whole-line
"\C-\M-w": unix-word-rubout
"\C-\M-d": shell-kill-word
"\C-\M-f": shell-forward-word
"\C-\M-b": shell-backward-word

"\ei": tab-insert
"\e,": shell-expand-line

"\e]": character-search
"\e[": character-search-backward

"\e[3~": delete-char

$if mode=vi
    set keymap vi-command
    "gg": beginning-of-history
    "G": end-of-history
$endif

$if Python
    TAB: complete
$endif
