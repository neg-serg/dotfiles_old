<?xml version="1.0"?>
<metacity_theme>
<info>
  <name>Mire v2 Grey</name>
  <author>lyrae | thrynk.deviantart.com</author>
  <copyright>lyrae, 2007</copyright>
  <date>Jan 2, 2007</date>
  <description>Mire v2 Grey metacity theme</description>
</info>

<frame_geometry name="normal" rounded_top_left="false" rounded_top_right="false" rounded_bottom_left="false" rounded_bottom_right="false" title_scale="medium">
  <distance name="left_width" value="4"/>
  <distance name="right_width" value="4"/>
  <distance name="bottom_height" value="4"/>
  <distance name="left_titlebar_edge" value="4"/>
  <distance name="right_titlebar_edge" value="4"/>
  <distance name="button_width" value="16"/>
  <distance name="button_height" value="16"/>
  <distance name="title_vertical_pad" value="2"/>
  <border name="title_border" left="2" right="2" top="4" bottom="4"/>
  <border name="button_border" left="1" right="1" top="4" bottom="4"/>
</frame_geometry>

<frame_geometry name="normal-maximized" rounded_top_left="false" rounded_top_right="false" rounded_bottom_left="false" rounded_bottom_right="false" title_scale="medium" parent="normal">
  <distance name="left_width" value="0"/>
  <distance name="right_width" value="0"/>
</frame_geometry>

<draw_ops name="title-text-focus">
 <title color="gtk:text[NORMAL]" x="(width - title_width) / 2" y="(height - title_height) / 2"/>
</draw_ops>

<draw_ops name="title-text">
 <title color="gtk:text[INSENSITIVE]" x="(width - title_width) / 2" y="(height - title_height) / 2"/>
</draw_ops>

<draw_ops name="title">
  <rectangle color="gtk:bg[NORMAL]" filled="true" x="0" y="0" width="width" height="height"/>

  <tint color="#282828" x="0" y="0" width="width" height="1" alpha="0.35"/>
  <tint color="#282828" x="0" y="1" width="1" height="height - 1" alpha="0.35"/>
  <tint color="#282828" x="width - 1" y="1" width="1" height="height - 1" alpha="0.35"/>

  <tint color="#282828" x="1" y="1" width="width - 2" height="1" alpha="0.95"/>
  <tint color="#282828" x="1" y="1" width="1" height="height - 1" alpha="0.95"/>
  <tint color="#282828" x="width - 2" y="1" width="1" height="height - 1" alpha="0.95"/>

  <tint color="#282828" x="2" y="2" width="width - 4" height="height / 3 - 3" alpha="0.95"/>
</draw_ops>

<draw_ops name="title-unfocused">
  <rectangle color="gtk:bg[NORMAL]" filled="true" x="0" y="0" width="width" height="height"/>

  <tint color="#282828" x="0" y="0" width="width" height="1" alpha="0.35"/>
  <tint color="#282828" x="0" y="1" width="1" height="height - 1" alpha="0.35"/>
  <tint color="#282828" x="width - 1" y="1" width="1" height="height - 1" alpha="0.35"/>

  <tint color="#282828" x="1" y="1" width="width - 2" height="1" alpha="0.95"/>
  <tint color="#282828" x="1" y="1" width="1" height="height - 1" alpha="0.95"/>
  <tint color="#282828" x="width - 2" y="1" width="1" height="height - 1" alpha="0.95"/>

  <tint color="#282828" x="2" y="2" width="width - 4" height="height / 3 - 3" alpha="0.95"/>
</draw_ops>

<draw_ops name="title-maximized">
  <rectangle color="gtk:bg[NORMAL]" filled="true" x="0" y="0" width="width" height="height"/>

  <tint color="#282828" x="0" y="0" width="width" height="1" alpha="0.35"/>

  <tint color="#282828" x="0" y="1" width="width" height="1" alpha="0.95"/>

  <tint color="#282828" x="0" y="2" width="width" height="height / 2 - 2" alpha="0.95"/>
</draw_ops>

<draw_ops name="title-unfocused-maximized">
  <rectangle color="gtk:bg[NORMAL]" filled="true" x="0" y="0" width="width" height="height"/>

  <tint color="#282828" x="0" y="0" width="width" height="1" alpha="0.35"/>

  <tint color="#282828" x="0" y="1" width="width" height="1" alpha="0.95"/>

  <tint color="#282828" x="0" y="2" width="width" height="height / 3 - 3" alpha="0.95"/>
</draw_ops>

<draw_ops name="title-shade">
  <rectangle color="gtk:bg[NORMAL]" filled="true" x="0" y="0" width="width" height="height"/>

  <tint color="#282828" x="0" y="0" width="width" height="1" alpha="0.35"/>
  <tint color="#282828" x="0" y="1" width="1" height="height - 1" alpha="0.35"/>
  <tint color="#282828" x="width - 1" y="1" width="1" height="height - 1" alpha="0.35"/>
  <tint color="#282828" x="1" y="height - 1" width="width - 2" height="1" alpha="0.35"/>

  <tint color="#282828" x="1" y="1" width="width - 2" height="1" alpha="0.95"/>
  <tint color="#282828" x="1" y="1" width="1" height="height - 2" alpha="0.95"/>
  <tint color="#282828" x="width - 2" y="1" width="1" height="height - 2" alpha="0.95"/>
  <tint color="gtk:bg[NORMAL]" x="1" y="height - 2" width="width - 2" height="1" alpha="0.9"/>

  <tint color="#282828" x="2" y="2" width="width - 4" height="height / 3 - 3" alpha="0.95"/>
</draw_ops>

<draw_ops name="title-shade-unfocused">
  <rectangle color="gtk:bg[NORMAL]" filled="true" x="0" y="0" width="width" height="height"/>

  <tint color="#282828" x="0" y="0" width="width" height="1" alpha="0.35"/>
  <tint color="#282828" x="0" y="1" width="1" height="height - 1" alpha="0.35"/>
  <tint color="#282828" x="width - 1" y="1" width="1" height="height - 1" alpha="0.35"/>
  <tint color="#282828" x="1" y="height - 1" width="width - 2" height="1" alpha="0.35"/>

  <tint color="#282828" x="1" y="1" width="width - 2" height="1" alpha="0.95"/>
  <tint color="#282828" x="1" y="1" width="1" height="height - 2" alpha="0.95"/>
  <tint color="#282828" x="width - 2" y="1" width="1" height="height - 2" alpha="0.95"/>
  <tint color="gtk:bg[NORMAL]" x="1" y="height - 2" width="width - 2" height="1" alpha="0.9"/>

  <tint color="#282828" x="2" y="2" width="width - 4" height="height / 3 - 3" alpha="0.95"/>
</draw_ops>

<draw_ops name="border-left">
  <tint color="#222222" x="0" y="0" width="1" height="height" alpha="0.35"/>
  <tint color="#222222" x="1" y="0" width="1" height="height" alpha="0.95"/>
</draw_ops>

<draw_ops name="border-right">
  <tint color="#222222" x="width - 1" y="0" width="1" height="height" alpha="0.35"/>
  <tint color="#222222" x="width - 2" y="0" width="1" height="height" alpha="0.95"/>
</draw_ops>

<draw_ops name="border-bottom">
  <tint color="#222222" x="0" y="0" width="1" height="height" alpha="0.35"/>
  <tint color="#222222" x="width - 1" y="0" width="1" height="height" alpha="0.35"/>
  <tint color="#222222" x="1" y="height - 1" width="width - 2" height="1" alpha="0.35"/>

  <tint color="#222222" x="1" y="0" width="1" height="height - 1" alpha="0.95"/>
  <tint color="#222222" x="width - 2" y="0" width="1" height="height - 1" alpha="0.95"/>
  <tint color="#222222" x="1" y="height - 2" width="width - 2" height="1" alpha="0.95"/>
</draw_ops>

<draw_ops name="border-bottom-maximized">
  <tint color="#222222" x="0" y="height - 1" width="width" height="1" alpha="0.35"/>

  <tint color="#222222" x="0" y="height - 2" width="width" height="1" alpha="0.95"/>
</draw_ops>

