      recolorable		= TRUE
      file			= "Spin/spin-up-bg.png"
      border			= { 22, 22, 2, 2 }
      stretch			= TRUE
      overlay_file		= "Spin/arrow-up-prelight.png"
      overlay_stretch		= FALSE
    }
    image
    {
      function			= BOX
      state 			= INSENSITIVE
      detail			= "spinbutton_up"
      recolorable		= TRUE
      file			= "Spin/spin-up-bg.png"
      border			= { 22, 22, 2, 2 }
      stretch			= TRUE
      overlay_file		= "Spin/arrow-up-disable.png"
