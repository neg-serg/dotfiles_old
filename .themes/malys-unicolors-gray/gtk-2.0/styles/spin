style "spinbutton"	= "default"
{
  xthickness = 10
  ythickness = 5
  GtkWidget::interior_focus	= 0
  base[NORMAL] = "#dbdbdb"
  base[PRELIGHT] = "#dbdbdb"
  base[SELECTED] = "#6284A3"
  base[ACTIVE] = "#dbdbdb"
  base[INSENSITIVE] = "#dbdbdb" 
  bg[NORMAL] = "#dbdbdb"
  bg[PRELIGHT] = "#dbdbdb"
  bg[SELECTED] = "#6284A3"
  bg[ACTIVE] = "#dbdbdb"
  bg[INSENSITIVE] = "#dbdbdb"   
  text[NORMAL] = "#363636"
  text[PRELIGHT] = "#000000"
  text[SELECTED] = "#222222"
  text[ACTIVE] = "#4C94AF"
  text[INSENSITIVE] = "#525252" 

  engine "pixmap"
  {
    image
    {
      function			= ARROW
    }

############################# UP ######################xx
    image
    {
      function			= BOX
      state 			= NORMAL
      detail			= "spinbutton_up"
      recolorable		= TRUE
