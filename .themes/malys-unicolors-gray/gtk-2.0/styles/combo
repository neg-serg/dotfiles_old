style "combo"		= "default"
{
  GtkWidget::wide-separators                    = 0
  xthickness			= 8
  ythickness			= 5
  GtkWidget::interior_focus	= 0
  base[NORMAL] = "#dbdbdb"
  base[PRELIGHT] = "#dbdbdb"
  base[SELECTED] = "#90b1c0"
  base[ACTIVE] = "#dbdbdb"
  base[INSENSITIVE] = "#dbdbdb" 
  text[NORMAL] = "#363636"
  text[PRELIGHT] = "#222222"
  text[SELECTED] = "#111111"
  text[ACTIVE] = "#90b1c0"
  text[INSENSITIVE] = "#494949"   
  engine "pixmap"
  {
    image
    {
      function			= BOX
      recolorable		= TRUE
      state				= PRELIGHT
      file				= "Combo/combo-prelight.png"
      border			= { 15, 15, 4, 4 }
      stretch			= TRUE
    }
    image
    {
      function			= BOX
      recolorable		= TRUE
      state				= NORMAL
      file				= "Combo/combo-normal.png"
      border			= { 15, 15, 4, 4 }
      stretch			= TRUE
    }

  image
    {
      function			= BOX
      recolorable		= TRUE
      state				= ACTIVE
      file				= "Combo/combo-pressed.png"
      border			= { 15, 15, 4, 4 }
      stretch			= TRUE
    }
 image
    {
      function			= BOX
      recolorable		= TRUE
      state				= INSENSITIVE
      file				= "Combo/combo-inactive.png"
      border			= { 15, 15, 4, 4 }
      stretch			= TRUE
    }
    image
    {
      function			= TAB
      state				= INSENSITIVE
      recolorable		= TRUE
      overlay_file		= "Combo/combo-arrow-insens.png"
      overlay_stretch	= FALSE
    }
    image
    {
      function				= TAB
      recolorable			= TRUE
      state					= NORMAL
      overlay_file			= "Combo/combo-arrow.png"
      overlay_border	= { 0, 0, 0, 0 }
      overlay_stretch	= FALSE
    }
  image
    {
      function				= TAB
      recolorable			= TRUE
      state					= PRELIGHT
      overlay_file			= "Combo/combo-arrow-prelight.png"
      overlay_border	= { 0, 0, 0, 0 }
      overlay_stretch	= FALSE
    }
    image
    {
       function		= VLINE
       recolorable		= TRUE
       file				= "Others/null.png"
       border			= { 0, 0, 0, 0 }
       stretch			= TRUE
    }    
  }
}

class "GtkCombo*"      			style "combo"
