 stretch   = TRUE
 gap_side  = BOTTOM
    }
    image 
    {
        function  = EXTENSION
 state   = ACTIVE
 file   = "Others/null.svg"
 border   = { 0, 0, 0, 0 }
 stretch   = TRUE
 gap_side  = RIGHT
    }
    image 
    {
        function  = EXTENSION
 state   = ACTIVE
