style "tooltips"	= "default"
{
	fg[NORMAL] = "#bbbbbb"
  engine "pixmap"
	{
		image
		{
			function 		= FLAT_BOX
                        detail		= "tooltip"
			recolorable     = TRUE
			file            = "/Others/tooltip.png"
			border			= { 2, 2, 2, 2 }
			stretch 		= TRUE
		}
	} 	
}
style "separator"
{
  engine "pixmap"
	{
    image
    {
       function		= BOX
       recolorable		= TRUE
       file				= "Lines/line-v.png"
       border			= { 1, 1, 4, 4 }
       stretch			= TRUE
       orientation	    =  VERTICAL       
    }
    image
    {
      function			= BOX
      recolorable		= TRUE
      file				= "Lines/line-h.png"
      border			= { 4, 4, 1, 1 }
      stretch			= TRUE
      orientation		= HORIZONTAL      
      
    }
  } 	
}    
widget "gtk-tooltip*"  			style "tooltips"
class 		"*GtkTooltips*"		style "tooltips"
widget_class 	"*Tooltips*"		style "tooltips"
widget "*.nautilus-extra-view-widget" style:highest "tooltips"
class "GtkSeparator" style "separator"
widget_class "*<GtkSeparatorToolItem>*"     style "separator"
