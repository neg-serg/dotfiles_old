#!/bin/dash
 
c1=#ffffff
c2=#d7a978
c3=#728b78
 
colorm() {
    if [ "$1" -ge "5" ]; then
        echo %{F${c1}}$1%{F-}
        elif [ "$1" -ge "1" ]; then
        echo %{F$c2}$1%{F-}
        else
        echo "$1"
        fi
}
 
m1=$(find ~/.local/mail/gmail/INBOX -type f | wc -l)
m2=$(find ~/.local/mail/gmail/INBOX/new -type f | wc -l)
 
echo "mail: $(colorm $m1)/$(colorm $m2)"
