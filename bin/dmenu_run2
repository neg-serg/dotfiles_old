#!/bin/sh
cachedir=${XDG_CACHE_HOME:-"$HOME/.cache"}
if [ -d "$cachedir" ]; then
	cache=$cachedir/dmenu_run
else
	cache=$HOME/.dmenu_cache # if no xdg dir, fall back to dotfile in ~
fi
(
	IFS=:
	if stest -dqr -n "$cache" $PATH; then
		stest -flx $PATH | sort -u |uniq -u | tee "$cache" | /usr/bin/rofi -columns 10 -lines 1 -width 1850 -yoffset -22 -key-run mod1-grave -location 6  "$@"
	else
		/usr/bin/rofi -dmenu -columns 10 -lines 1 -width 1850 -yoffset -22 -key-run mod1-grave -location 6  "$@" < "$cache"
	fi
) | ${SHELL:-"/bin/zsh"} &
