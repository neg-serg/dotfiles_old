#!/bin/zsh

function get_selection() {
    dmenu_path | fzf
}

function main() {
    if selection=$(get_selection); then
        exec "${selection}"
    fi
}

if [[ $# > 0 ]]; then
    if [[ $1 == "x11" ]]; then
        st -c "fzf-menu" -g  "550x12-4-4" -e fzf-menu run 
    elif [[ $1 == "run" ]]; then
        main "$@"
    fi
fi
