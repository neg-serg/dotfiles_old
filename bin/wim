#!/bin/sh
if [[ `wmctrl -l|awk '{ $1=""; $2=""; $3=""; print $0 }'|grep vim` != "   tmux:1 [ vim ]"  ]] && [[ -z $(pidof vim) ]]; then
    urxvtc -fn 'xft:PragmataPro for Powerline:pixelsize=20,xft:dejavu sans mono:size=16:antialias=true' -name 'wim' -e zsh -i -c 'TMUX= tmux new -s vim -n vim vim\ \-\-servername\ VIM'
else
    urxvt -fn 'xft:PragmataPro for Powerline:pixelsize=20,xft:dejavu sans mono:size=16:antialias=true' -name 'wim' -e zsh -i -c 'TMUX= tmux attach-session -d -t vim'
fi
