album="$@"
[ -z $album ] && album=$(mpc --format '%album%' | head -1)
mpc search album "$album" \
  | perl -pe 's{(.+)/.+$}{$1}' \
  | sort -u \
  | perl -pe 's{^}{/home/neg/music/}'
