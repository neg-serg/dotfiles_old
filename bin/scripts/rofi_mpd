#!/bin/zsh

mpd_menu=(
    "title_copy" 
    "artist_copy" 
    "mpd_show"
)

function generate(){
    local j=0
    for i in ${mpd_menu[@]}; do
        (( j++ ))
        echo "$j - [ $i ]"
    done
}

function handler(){
    while IFS= read -r arg; do 
        if [[ ${arg} =~ ".*title_copy.*" ]]; then
            mpc current | xsel -bi
        elif [[ ${arg} =~ ".*artist_copy.*" ]]; then
            mpc current -f "[%artist%]"|xsel -bi
        elif [[ ${arg} =~ ".*mpd_show.*" ]]; then
            ~/bin/mpd_dzen_info
        fi
    done
}


local neg_rofi_bg="#000000"
local neg_rofi_fg="#666666"
local neg_rofi_hlfg="#aaaaaa"
local neg_rofi_hlbg="#194558"
local neg_rofi_bc="#202020"

local rofi_font="Pragmata Pro for Powerline bold 17"

local rofi_colors=" -fg '${neg_rofi_fg}' -bg '${neg_rofi_bg}' -hlfg '${neg_rofi_hlfg}' -hlbg '${neg_rofi_hlbg}' -bc '${neg_rofi_bc}' "
local rofi_options=" -dmenu -auto-select -font '${rofi_font}' -b -disable-history -columns 3 -lines 1 -width 1850 -yoffset -22 -location 6 -p \[mpd\]\ \>\>\ "
local rofi_pid=" -pid /run/user/$(id -u)/rofi_mpd.pid"

generate | eval "rofi ${rofi_colors} ${rofi_options} ${rofi_pid}" | handler 
