#!/bin/sh
wid=$(xdotool search --classname telegram-desktop)
if [[ -z "${wid}" ]]; then
    telegram-desktop
else
    source "${XDG_CONFIG_HOME}/.windowmanager"
    if [[ "${windowmanager}" = "i3" ]]; then
        i3-msg '[con_mark=telegram_im] scratchpad show'
        i3-msg '[con_mark=telegram_im] move container to workspace current'
    fi
fi

