#!/bin/zsh
function main(){
    if [[ $# == 0 ]]; then
        vol_manager
    else
        local inc_=1
        local status_

        local addr_=127.0.0.1 
        local port_=6600

        status_=$(grep 'state: ' <<< \
            $( \
                echo -ne "status\nclose\n" | \
                netcat "${addr_}" "${port_}" \
            ) \
            | awk '{print $2}'
        )
        if [[ ${status_} == "play" ]]; then
            echo -ne "volume "$1"\nclose\n" | \
            netcat "${addr_}" "${port_}"
        else
            mpvc
        fi
    fi
}

function vol_manager(){
    local pulse_=true
    if [[ ! -e ${pulse_} ]]; then
        st pulsemixer && exit
    else
        st alsamixer -g && exit 
    fi
}

main "$@"
