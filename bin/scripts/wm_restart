#!/bin/zsh

function wait_a_bit(){
    sleep .2s; 
}

function soft_restart(){
    if [[ ${windowmanager} == "notion" ]]; then
        restart_panel
    fi
}

function restart_panel() {
    pkill -USR1 -x sxhkd
    pkill admiral
    pkill dzen2
    pkill rofi
    ~/bin/scripts/panels
}

function notion_restart() {
    restart_panel
    if [[ ${1} != "soft" ]]; then
        notionflux -e 'notioncore.restart()'
    fi
}

function windowchef_restart(){
    "${XDG_CONFIG_HOME}/windowchef/windowchefrc"
    pkill -USR1 -x sxhkd
}

function i3_restart(){
    polybar_cfg=${XDG_CONFIG_HOME}/polybar/main
    # kill any current poppers (thanks Dylan)
    if [[  $(i3 --version|awk '{print $3}'|grep '^4.13' -ow) == "4.13" ]]; then
        ps -ef | awk -v name="bar" '$0 ~ name {print $2}' | xargs kill 2>/dev/null
        {
            pkill -USR1 -x sxhkd
            polybar -c ${polybar_cfg} tiny; 
            wait_a_bit
            polybar -c ${polybar_cfg} main
        }
        wait_a_bit
        i3-msg reload
    else
        i3-msg restart
    fi
    pkill -USR1 -x sxhkd
}

function main() {
    if [[ ${1} != "" ]]; then
        if [[ ${1} == "soft" ]]; then
            soft_restart
        else
            wm_="$1"
            shift
            eval "$(echo ${wm_}_restart) $@"
        fi
    else
        wm_="${windowmanager}"
        eval "$(echo ${wm_}_restart)"
    fi
}

main "$@"
