#!/bin/sh

wid=$(xdotool search --instance _weechat_)
if [[ -z "${wid}" ]]; then
    st -c _weechat_ -f \'Terminus Re33:size=14:style=Bold\' zsh -c \'tmux -S ~/1st_level/weechat.socket new weechat\'
else
    source ${XDG_CONFIG_HOME}/.windowmanager
    if [[ ${windowmanager} = "i3" ]]; then
        i3-msg '[con_mark="_weechat_"] scratchpad show'
    fi
fi
