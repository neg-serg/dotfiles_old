#!/bin/zsh
wid=$(xdotool search --classname mpd-pad2)
if [[ -z "${wid}" ]]; then
    st -f "PragmataPro for Powerline:pixelsize=18" -c mpd-pad2 -e ncmpcpp &
else
    source ${XDG_CONFIG_HOME}/.windowmanager
    if [[ ${windowmanager} = "i3" ]]; then
        i3-msg '[con_mark="ncmpcpp"] scratchpad show'
    fi
fi

