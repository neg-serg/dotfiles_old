#!/bin/sh
# CMD="-tr -name MainTerminal -fn -elite-laptop-bold-r-normal--28-280-72-72-c-140-koi8-r \
#                             -fb -elite-laptop-bold-r-normal--28-280-72-72-c-140-koi8-r \
#                             -fi -elite-laptop-bold-r-normal--28-280-72-72-c-140-koi8-r"

MAIN_DETECT=$(tmux list-sessions|grep main|awk -F : '{print $1}')
if [[ $MAIN_DETECT != "main" ]]; then
    wid=$(xdotool search --classname MainTerminal)
    if [ -z "$wid" ]; then
        urxvtc -tr -name MainTerminal -fn "xft:PragmataPro for Powerline:size=17" \
            -fb "xft:PragmataPro for Powerline:size=17" \
            -fi "xft:PragmataPro for Powerline:size=17"  -e zsh -i -c "tmux new-session -s main && tmux a -t main"
    fi
else
    urxvtc -tr -name MainTerminal -fn "xft:PragmataPro for Powerline:size=17" \
        -fb "xft:PragmataPro for Powerline:size=17" \
        -fi "xft:PragmataPro for Powerline:size=17" \
        -e zsh -i -c "tmux a -t main"
fi
