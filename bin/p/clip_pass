#!/bin/bash
pwd_store_d="${HOME}/.password-store"
export pwd_store_d
pass_output=$(pass $1)
mail_key_="$(gpg -dq ~/.mail_.gpg)"
if [[ -z ${pass_output} ]]; then
	kill -TERM -$(ps x -o "%p %r %y %x %c " | grep _pass | awk '{print $2}')
	exit
fi

echo "${pass_output}" | gpg -e -r "${mail_key_}" -o /tmp/pass_clipped_fifo --no-tty --yes
echo "$1" > /tmp/pass_picked
