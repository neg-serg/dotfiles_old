#!/bin/sh

# Colors 
FG='white'
BG='#449fe5'

FONT='-xos4-terminus-medium-r-normal--14-140-72-72-c-80-*-*'
# FONT='xft:Pragmata Pro for Powerline'

WHEREX=902
WHEREY=40
WIDTH=503

PID=$(ps wwax |grep dzen2 |grep $WHEREX |grep $FG |grep $BG |grep $WIDTH |grep -v grep |awk '{print $1}')

if [ ${#PID} -ne 0 ]
then
	kill -9 $PID
else 
	xsel -p | xargs sdcv -n | sed '/^$/d' | \
	dzen2 -p -x $WHEREX -y $WHEREY -w $WIDTH -fg $FG -bg $BG  -l 15 -fn $FONT \
	-e 'onstart=scrollhome,uncollapse;button1=togglecollapse;button4=scrollup:1;button5=scrolldown:1;button3=exit'
fi
