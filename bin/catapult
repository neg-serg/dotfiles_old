#! /bin/bash
#--[ dmenu stuff ]--
# FONT='-misc-ohsnap-medium-r-normal--11-79-100-100-c-60-iso8859-1'
FONT='PragmataPro-18'

NORMAL_BACKGROUND='#000000'
NORMAL_FOREGROUND='#CCCCCC'
SELECTED_BACKGROUND='#CCCCCC'
SELECTED_FOREGROUND='#000000'
#-------------------
if [ $# -lt 1 ]; then
    echo 'no arguments given' >&2
    exit 1
fi

action=$1
shift

MAX_LINES=512
move_places="$HOME/.local/share/catapult_places"
places_temp="$HOME/.local/share/catapult_places.tmp"
last_action="$HOME/.local/share/catapult_last_action"

if [ "$action" = "repeat" ] ; then
    destination=$(head -n 1 "$move_places")
    destination=${destination//\~/$HOME}
    if [ -z "$destination" ] ; then
        echo 'last destination is missing' >&2
        exit 1
    fi
    action=$(cat "$last_action")
    case "$action" in
        copy)
            cp -t "$destination" "$@"
            ;;
        move)
            mv -t "$destination" "$@"
            ;;
        *)
            echo "action '$action' can't be repeated" >&2
            exit 1
            ;;
    esac
    exit
elif [ "$action" = "purge" ] ; then
    cat "$move_places" | sed 's:~:'$HOME':' | xargs -d '\n' ls -d | sed 's:'$HOME':~:' > "$places_temp"
    mv "$places_temp" "$move_places"
    exit 0
fi

if  [ "$action" != "rename" ] ; then
    # destination=$(cat "$move_places" | fmenu -l 10 -i -fn "$FONT" -nb "$NORMAL_BACKGROUND" -nf "$NORMAL_FOREGROUND" -sb "$SELECTED_BACKGROUND" -sf "$SELECTED_FOREGROUND")
    destination=$(cat "$move_places" | dmenu -l 10 -i -fn "$FONT" -nb "$NORMAL_BACKGROUND" -nf "$NORMAL_FOREGROUND" -sb "$SELECTED_BACKGROUND" -sf "$SELECTED_FOREGROUND")
else
    # destination=$(echo -n "$(basename "$@")" | fmenu -l 10 -i -fn "$FONT" -nb "$NORMAL_BACKGROUND" -nf "$NORMAL_FOREGROUND" -sb "$SELECTED_BACKGROUND" -sf "$SELECTED_FOREGROUND" )
    destination=$(echo -n "$(basename "$@")" | dmenu -l 10 -i -fn "$FONT" -nb "$NORMAL_BACKGROUND" -nf "$NORMAL_FOREGROUND" -sb "$SELECTED_BACKGROUND" -sf "$SELECTED_FOREGROUND" )
fi

if [ -n "$destination" -a -$? -eq 0 ]; then
    destination=${destination//\~/$HOME}
    case "$action" in
        copy)
            cp -t "$destination" "$@"
            ;;
        move)
            mv -t "$destination" "$@"
            ;;
        rename)
            mv "$@" "$(dirname "$@")/$destination"
            ;;
        *)
            echo "action '$action' is unknown" >&2
            exit 1
            ;;
    esac
    echo -n "$action" > "$last_action"
    if [ "$action" != "rename" ]; then
        destination=${destination//$HOME/\~}
        destination=${destination//\//\\\/}
        sed -i "1s/^/$destination\n/" "$move_places"
        cat "$move_places" | sort | uniq -c | sort -rn | sed 's/^[0-9 ]*//' | head -n $MAX_LINES > "$places_temp"
        mv "$places_temp" "$move_places"
    fi
fi
